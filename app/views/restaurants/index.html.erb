<%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-primary" %>
<%= form_tag @restaurant, :method => :get, class: "form-search pull-right" do %>  
  <p>  
    <%= text_field_tag :search, params[:search], class: "input-medium search-query input-large", placeholder: "Only Locations" %>  
    <%= submit_tag "Search Near", :name => nil, class: "btn" %>  
<% end %>  
<div class="page-header">
<h1>Listing restaurants</h1>
</div>

<table class="table table-condensed">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Cuisines</th>
    <th>Opening hours</th>
       <th>Rating</th>
	   <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.address %></td>
    <td><%= restaurant.cuisines %></td>
    <td><%= restaurant.opening_hours %></td>
	 <td><i class="star star-<%= restaurant.comments.calculate(:average, 'rating').to_i %>"></i> <%= link_to restaurant.comments.count, restaurant %> Reviews</td>
	  <td><%= link_to 'Show', restaurant %></td>
     <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
    <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>



